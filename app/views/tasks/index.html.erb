<h1>Task List</h1>
<%= link_to 'Create Task', new_task_path %>
<table class="table">
  <thead>
    <th>Title</th>
    <th>Description</th>
    <!-- <th>Start Time</th>
      <th>End Time</th>
      <th>Status</th>
      <th>Priority</th> -->
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <!-- <td><%= task.start_time %></td>
        <td><%= task.end_time %></td> 
        <td><%= task.status %></td>
        <td><%= task.priority %></td> -->
      <td>
        <%= link_to "詳細資料", task_path(task) %>
        <%= link_to "編輯", edit_task_path(task) %>
        <%= link_to "刪除", task_path(task), method: "delete", data: {confirm: "確認刪除" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>